@model LottoNumbersJacobs.Models.LottoNumberModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Lotto Number Generator</h1>
    <form asp-action="Index" method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="LottoNumOne"> Lotto Number One </label>
            <input asp-for="LottoNumOne" />
        </div>
        <div>
            <label asp-for="LottoNumTwo"> Lotto Number Two </label>
            <input asp-for="LottoNumTwo" />
        </div>
        <div>
            <label asp-for="LottoNumThree"> Lotto Number Three </label>
            <input asp-for="LottoNumThree" />
        </div>
        <div>
            <label asp-for="LottoNumFour"> Lotto Number Four </label>
            <input asp-for="LottoNumFour" />
        </div>

        <div>
            <label>Numbers Matching:</label>
            <input value="@ViewBag.NumbersMatching.ToString()" readonly />
        </div>
        <button type="submit" >Calculate Matching Numbers</button>
        <a asp-action="Index">Clear</a>
    </form>
</body>
</html>
